<!DOCTYPE html>
<html>

<head>
    <title>Forgot Password</title>
    <%- include('bootstrap') -%>
</head>

<body>
    <%- include('loader') -%>
    
    
    <!-- Header -->
    <nav class="navbar navbar-expand-md navbar-dark bg-light" id="header">
        <div class="container-fluid">
            <a href="#" class="navbar-brand text-success">
                <img src="/./img/greenque.png" width="38" height="38" class="d-inline-block " alt="">
                <span class="navbar-brand text-success">Greenque</span>
            </a>
        </div>
    </nav>
    <!--End Header -->
    
    <div class="container-fluid" id="forgot-password">
        <form action="/forgot-password/<%= token %>" method="POST" autocomplete="off"> 
            <div class="row">
                <div class="col-12">
                    <center>
                        <h3>Forgot Password</h3>
                    </center>
                </div>
            </div>
            <div class="row">
                <div class="col-12">
                    <center>
                        <input type="password" name="newPwd" placeholder="Enter New Password">
                    </center>
                </div>
            </div>
            
            <div class="row mt-3">
                <div class="col-12">
                    <center>
                        <input type="password" name="reEnterPwd" placeholder="Re-type New Password">
                    </center>
                </div>
            </div>
            <center class="mt-3">
                <button class="btn bg-success text-white">Change Password</button>
            </center>
        </form>
    </div>
    <%- include('bootstrapLink') -%>
</body>

</html>
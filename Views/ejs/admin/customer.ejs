<html>

<head>
    <title>
        Customer
    </title>
    <%- include('bootstrap') -%>
</head>
<body>
    <%- include('header') -%>
    <div class="container-fluid">
        <div class="row">
            <div class="col-2">
                <%- include('sidebar') -%>
            </div>
            <div class="col-10">
                <div class="container-fluid mt-3">
                    
                        <h5>
                            Customers
                        </h5>
                    
                </div>     
                <div class="container-fluid mt-3 underline">

                </div>
                <div class="container-fluid mt-5">
                    <div class="row pt-2" style="background-color:rgba(82, 145, 226, 0.233)">
                        <div class="col-lg-5 col-md-5 col-sm-5">
                            <h6 >Name</h6>
                        </div>
                        <div class="col-lg-4 col-lg-3 col-lg-3">
                            <h6 >Email</h6>
                        </div>
                        <div class="col-lg-3 col-sm-2 col-md-2">
                            <h6 >Phone no.</h6>
                        </div>
                        
                    </div>
                    <% customer.forEach(c=>{ %>
                        <% if (c.isUser){%>
                        <div class="row mt-2" id="backcolor">
                            <div class="col-lg-5 col-md-5 col-sm-5">
                                <p><%= c.name %></p>
                            </div>
                            <div class="col-lg-4 col-lg-3 col-lg-3">
                                <p><%= c.email %></p>
                            </div>
                            <div class="col-lg-3 col-sm-2 col-md-2">
                                <p><%= c.phone_no %></p>
                            </div>
                            
                        </div>
                        <%}%>
                    <% })%>
                </div>
            </div>
        </div>
    </div>
    

</body>
</html>
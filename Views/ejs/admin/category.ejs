<!DOCTYPE html>
<html>

<head>
    <title>Category List</title>
    <%- include('bootstrap') -%>

</head>

<body>
    <%- include('header') -%>
        <div class="row">
            <div class="col-2">
                <%- include('sidebar') -%>
            </div>
            <div class="col-10">
                <div class="container-fluid mt-2">
                    <h5>Category</h5>
                </div>
                <div class="container-fluid mt-3 underline">

                </div>
                <div class="container-fluid mt-2">
                    <div class="row">
                        <div class="col-9"></div>
                        <div class="col-1">

                        </div>
                        <div class="col-2">
                            <h4 style="float: right;">

                                <i class="fa fa-plus p-2" aria-hidden="true" id="plus" onclick="displayForm()"></i>

                            </h4>
                        </div>
                    </div>
                </div>

                <!-- Category Form -->
                <div class="container-fluid mt-3 parentProduct">
                    <form action="" method="GET" autocomplete="off"
                        enctype="multipart/form-data" class="productForm" id="categoryForm"
                        onsubmit="return categoryFormValidation()">
                        
                        <table class="productTable">
                            <tr>
                                <td>
                                    Category Name:
                                </td>
                                <td>
                                    <input type="text" class="form-control" name="category_name"
                                        placeholder=" Category Name" value="" id="categoryValue">
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <div class="text-danger nameErr">

                                    </div>

                                </td>
                            </tr>
                            <tr>
                                <td colspan="2" style="text-align: center;">
                                    <button type="submit" class="btn btn-info"><i
                                            class="fa fa-database"></i>Submit</button>
                                </td>
                            </tr>
                        </table>



                    </form>
                </div>
                <!-- END -->
                <!-- Error -->
                <% if(messages.err){ %> 
                    <div class="container-fluid mt-3">
                        <p class="text-danger"><%= messages.err %></p>
                    </div>
                    <%} %>
                <div class="container-fluid mt-2">

                    <div class="row pt-3 pb-3" style="background-color:rgba(82, 145, 226, 0.233)">
                        <div class="col-lg-8 col-md-8 col-sm-8 col-xs-8">
                            <b>
                                <h6>
                                    Name
                                </h6>
                            </b>


                        </div>

                        <div class="col-lg-4 col-md-4 col-sm-4 col-xs-4">
                            <h6>
                                <b>
                                    Action
                                </b>
                            </h6>
                        </div>

                    </div>

                </div>
                <% list.forEach(li=>{ %>
                    <div class="container-fluid mt-3 pb-3" id="backcolor">

                        <div class="row pt-2" class="category">
                            <input type="hidden" name="_id" value="<%= li._id %>">
                            <div class="col-lg-8 col-md-8 col-sm-8 col-xs-8">
                                <span class="categoryName">
                                    <%= li.category_name %>
                                </span>
                            </div>
                            <div class="col-lg-2 col-md-2 col-sm-2 col-xs-2">
                                <i class="fa fa-pencil fa-lg p-1 text-primary" aria-hidden="true" id="icon" onclick="updateCategory(this)"></i>
                            </div>
                            <div class="col-lg-2 col-md-2 col-sm-2 col-xs-2">
                                <a href="/admin/managecategory/delete/<%= li.category_name %>/<%= li._id %>"
                                    onclick="return confirm('Are you sure you want to delete this record?');"><i
                                        class="fa fa-trash fa-lg p-1" aria-hidden="true" id="icon"></i></a>
                            </div>
                        </div>

                    </div>
                    <% })%>
            </div>
        </div>
        <script type="text/javascript" src="/.././js/category.js" defer></script>
</body>

</html>